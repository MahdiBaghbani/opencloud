{
  "index_patterns": [
    "opencloud-default-*"
  ],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "ID": {
          "type": "keyword"
        },
        "ParentID": {
          "type": "keyword"
        },
        "RootID": {
          "type": "keyword"
        },
        "MimeType": {
          "type": "wildcard"
        },
        "Path": {
          "type": "wildcard"
        },
        "Deleted": {
          "type": "boolean"
        },
        "Hidden": {
          "type": "boolean"
        }
      }
    }
  },
  "version": 1,
  "_meta": {
    "description": "using component templates"
  }
}
